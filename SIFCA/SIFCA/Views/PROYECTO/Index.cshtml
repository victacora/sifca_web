@model IEnumerable<SIFCA.Models.PROYECTO>

@{
    ViewBag.Title = "Gestionar proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a href="@Url.Action("Create", "PROYECTO")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear proyecto</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Listado proyectos
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripcion
                        </th>
                        <th>
                            Tipo diseño muestral
                        </th>
                        <th>
                            Intensidad muestreo
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeA">
                            <th>
                                @Html.DisplayFor(modelItem => item.FECHA)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.DESCRIPCION)
                            </th>
                            <th>
                                @(item.TIPODISENIOMUESTRAL=="S"?"Simple":(item.TIPODISENIOMUESTRAL=="E"?"Estratificado":"Bietapico"))
                            </th>
                            <th>
                            <th>
                                @Html.DisplayFor(modelItem => item.INTMUESTREO.ToString("P2"))
                            </th>
                            <td><a href="@Url.Action("Edit", "PROYECTO", new { id = item.NROPROY })"><i class="fa fa-edit "></i>Editar</a></td>
                            <td><a href="@Url.Action("Details", "PROYECTO", new { id = item.NROPROY })"><i class="fa fa-search "></i>Ver detalles</a></td>
                            <td><a href="@Url.Action("Delete", "PROYECTO", new { id = item.NROPROY })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
