@model SIFCA.Models.TIPOLINEAINVENTARIO
@{
    ViewBag.Title = "Detalles tipo linea de inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalles tipo linea de inventario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NOMBRE, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control", @disabled="disabled"  } })
                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DESCRIPCION, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DESCRIPCION, 5, 116, new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.REQUIEREESPECIE, "Requiere especie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("REQUIEREESPECIE", null, htmlAttributes: new { @class = "chosen-select form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.REQUIEREESPECIE, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "TIPOLINEAINVENTARIO")" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Regresar</a>
    <a href="@Url.Action("Edit", "TIPOLINEAINVENTARIO", new { id = Model.NROTIPOLINEAINV })" class="btn btn-primary"><i class="fa fa-edit "></i> Editar tipo linea de inventario</a>
</div>
