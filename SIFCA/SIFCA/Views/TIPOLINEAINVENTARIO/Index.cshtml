@model IEnumerable<SIFCA.Models.TIPOLINEAINVENTARIO>

@{
    ViewBag.Title = "Gestionar tipo linea de inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Create", "TIPOLINEAINVENTARIO")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear tipo linea de inventario</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Listado tipo linea inventarios
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripcion
                        </th>
                        <th>
                            Requiere especie
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeA">
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DESCRIPCION)
                            </td>
                            <td>
                                @(item.REQUIEREESPECIE=="S" ? "Si" : "No")
                            </td>
                            <td><a href="@Url.Action("Edit", "TIPOLINEAINVENTARIO", new { id = item.NROTIPOLINEAINV })"><i class="fa fa-edit "></i>Editar</a></td>
                            <td><a href="@Url.Action("Details", "TIPOLINEAINVENTARIO", new { id = item.NROTIPOLINEAINV })"><i class="fa fa-search "></i>Ver detalles</a></td>
                            <td><a href="@Url.Action("Delete", "TIPOLINEAINVENTARIO", new { id = item.NROTIPOLINEAINV })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
